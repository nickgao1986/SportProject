<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.imooc.sport">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR"/> <!-- 协处理器计步权限 -->
    <uses-feature
            android:name="android.hardware.sensor.stepcounter"
            android:required="true"/>
    <uses-feature
            android:name="android.hardware.sensor.stepdetector"
            android:required="true"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:name=".SportApplication"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".activity.SetAvatarActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">

        </activity>

        <activity
                android:name=".activity.SetBirthDayActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
        >

        </activity>

        <activity
                android:name=".activity.MatchActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.GuideChooseInterestActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">

        </activity>


        <activity
                android:name="com.nick.apps.pregnancy11.mypedometer.fragment.BottomActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.PedoClassifyListActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.VideoDetailActivity"
                android:configChanges="orientation|screenSize|uiMode"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.SearchActivity"
                android:configChanges="orientation|screenSize|uiMode"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>


        <activity
                android:name=".activity.PedoCommentActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
        >
        </activity>

        <activity
                android:name="com.nick.apps.pregnancy11.mypedometer.fragment.PedoPreviewImageActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.PhoneCodeLoginActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>

        <activity
                android:name=".activity.SetHeightAndWeightActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
        >
        </activity>

        <activity
                android:name="com.image.PedoCropImageActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
        >
        </activity>


        <activity
                android:name=".activity.DetailActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">

        </activity>

        <activity
                android:name=".activity.LoginActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">

        </activity>

        <activity
                android:name=".activity.VerifyActivity"
                android:configChanges="orientation|keyboardHidden|navigation"
                android:launchMode="singleTask"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">

        </activity>

    </application>

</manifest>
