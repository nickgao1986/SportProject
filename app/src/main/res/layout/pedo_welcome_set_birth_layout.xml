<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rlImageContainer"
                android:orientation="vertical"
                android:gravity="center_horizontal">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="28dp"
        android:text="你的性别?"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:text="依据性别设计训练内容"/>

    <LinearLayout
        android:id="@+id/ll_gender_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gender1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="男"
            android:gravity="center"
            android:textColor="@color/pedo_gender_text_color"
            android:background="@drawable/pedo_gender_background"/>

        <TextView
            android:id="@+id/gender2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/pedo_gender_text_color"
            android:background="@drawable/pedo_gender_background"/>
    </LinearLayout>


    <TextView
        android:id="@+id/set_birth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ll_gender_select_layout"
        android:textSize="28dp"
        android:text="你的出生年月?"/>

    <TextView
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_below="@+id/set_birth_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="16dp"
        android:text="仅用作推荐训练的依据"/>

    <TextView
        android:id="@+id/set_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_below="@+id/content1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:text="1992年10月4日"/>


    <TextView
        android:id="@+id/btn"
        android:layout_width="315dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:text="下一步"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/pedo_guide_round_rectangle"/>



</RelativeLayout>