<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_team_search_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_left"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/action_bar_back_btn"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        />

    <TextView
        android:id="@+id/tv_pedo_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/btn_search"
        android:layout_toRightOf="@+id/btn_left"
        android:textColorHint="#bbbbbb"
        android:textSize="14dp"
        android:paddingLeft="11dp"
        android:background="@drawable/pedo_search_bg"
        android:drawableLeft="@drawable/pedo_search_icon"
        android:drawablePadding="5dp"
        android:transitionName="textview"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/btn_search"
        android:layout_marginLeft="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="搜索"
        android:textSize="15dp"
        android:textColor="@color/color_000000"/>

</RelativeLayout>