<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:fitsSystemWindows="true">

    <com.nick.apps.pregnancy11.mypedometer.fragment.helper.JZVideoPlayerStandardControl
        android:id="@+id/jc_video"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pedo_reply_icon">
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门话题"
                    android:textColor="#444444"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="16小时前"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pedo_attention_btn"
                android:gravity="center"
                android:text="关注"/>

        </RelativeLayout>


        <com.nick.apps.pregnancy11.mypedometer.fragment.CardModuleFolderView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            >
        </com.nick.apps.pregnancy11.mypedometer.fragment.CardModuleFolderView>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:background="#F5F5F5"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            >

            <TextView
                android:id="@+id/bb_tv_search_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="全部回答"
                android:textColor="@color/color_181818"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/pedo_search_arrow"
                android:padding="3dp"
                android:text="更多"
                android:textColor="#49C9C9"
                android:textSize="12sp"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>