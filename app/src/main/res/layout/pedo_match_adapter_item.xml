<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:gravity="center_horizontal"
             >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_match"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/pedo_item_pic_1"
        fresco:placeholderImageScaleType="focusCrop"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:gravity="left"
        android:text="运动健身达人告诉你如何科学增肌"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="#666666"
        android:textSize="16dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_centerVertical="true"
            fresco:placeholderImage="@drawable/pedo_little_avatar"
            android:id="@+id/icon"
            fresco:roundAsCircle="true"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:text="不科学疯兔"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:textSize="11dp"
            android:layout_marginStart="4dp"
            />


        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="99"-->
            <!--android:textColor="#999999"-->
            <!--android:drawableLeft="@drawable/pedo_collect_selector"-->
            <!--android:drawablePadding="3dp"-->
            <!--android:textSize="11dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--/>-->

        <com.nick.apps.pregnancy11.mypedometer.fragment.view.CollectButton
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
        </com.nick.apps.pregnancy11.mypedometer.fragment.view.CollectButton>
    </RelativeLayout>


</LinearLayout>