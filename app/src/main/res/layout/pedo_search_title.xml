<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_team_search_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:hint="@string/chat_search"
        android:textColorHint="#bbbbbb"
        android:textSize="14dp"
        android:paddingLeft="11dp"
        android:background="@drawable/pedo_search_bg"
        android:drawableLeft="@drawable/pedo_search_icon"
        android:drawablePadding="5dp"
        android:transitionName="textview"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/chat_clean_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:padding="5dp"
        android:src="@drawable/pedo_clear_nor"
        android:visibility="gone"/>
</RelativeLayout>